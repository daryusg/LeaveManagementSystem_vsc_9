    <script>
          $(function () {
            $('.cancelBtn').click(
                function(e){
                    swal({
                        title: "Are you sure?",
                        text: "Are you sure you want to cancel this leave request?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }).then((confirm) => {
                        if (confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#leaveRequestId').val(id);
                            $('#cancelForm').submit();
                        }
                    });
                }
            );
        });
    </script>
